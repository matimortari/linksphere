generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SupportBanner {
  NONE
  LGBTQ_RIGHTS
  ANTI_RACISM
  MENTAL_HEALTH
  CLIMATE_ACTION
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String         @id @default(cuid())
  slug          String         @unique
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  description   String?
  public        Boolean?
  accounts      Account[]
  sessions      Session[]
  links         UserLink[]
  buttons       SocialButton[]
  settings      UserSettings?
  UserStats     UserStats[]
}

model UserLink {
  id        Int      @id @default(autoincrement())
  url       String
  title     String
  userId    String
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model SocialButton {
  id        Int      @id @default(autoincrement())
  url       String
  platform  String
  icon      String
  userId    String
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model UserSettings {
  id                         Int           @id @default(autoincrement())
  userId                     String        @unique
  backgroundColor            String        @default("#e7e5e5") // Main page/preview container background color
  slugTextColor              String        @default("#1e1e1e") // Color for slug text
  slugTextWeight             String        @default("500") // Weight for slug text
  slugTextSize               String        @default("1rem") // Size for slug text
  headerTextColor            String        @default("#1e1e1e") // Color for text in header
  buttonBackgroundColor      String        @default("#ffffff") // Background color for button container
  buttonShadowColor          String        @default("#e7e5e5") // Shadow color for button container
  buttonIconColor            String        @default("#1e1e1e") // Color for icon inside button container
  buttonHoverBackgroundColor String        @default("#eeeeee") // Background color for button container on hover
  linkBackgroundColor        String        @default("#ffffff") // Background color for link container
  linkShadowColor            String        @default("#e7e5e5") // Shadow color for link container
  linkTextColor              String        @default("#1e1e1e") // Color for text inside link container
  linkHoverBackgroundColor   String        @default("#eeeeee") // Background color for link container on hover
  linkBorderRadius           String        @default("0.5rem") // Border radius for link container
  linkPadding                String        @default("0.5rem") // Padding for link container
  supportBanner              SupportBanner @default(NONE) // Banner type to display
  sensitiveContent           Boolean       @default(false) // Show sensitive content
  user                       User          @relation(fields: [userId], references: [id])
}

model UserStats {
  id        Int      @id @default(autoincrement())
  userId    String
  views     Int      @default(0)
  clicks    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}
